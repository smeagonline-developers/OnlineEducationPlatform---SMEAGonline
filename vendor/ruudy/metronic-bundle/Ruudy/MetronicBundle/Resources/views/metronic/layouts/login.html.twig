{# src/Ruudy/SecurityBundle/Resources/views/metronic/layouts/login.html.twig #}
{% extends 'RuudyMetronicBundle:metronic:metronic.html.twig' %}

{% block head %}
    {{ parent() }}

    {% embed 'RuudyMetronicBundle:metronic:zones/head.html.twig' %}
        {% block page_stylesheets %}
            <link href="{{ asset('bundles/applicationmetronic/global/plugins/select2/select2.css') }}" rel="stylesheet" type="text/css"/>
            <link href="{{ asset('bundles/applicationmetronic/admin/pages/css/login.css') }}" rel="stylesheet" type="text/css"/>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% embed 'RuudyMetronicBundle:metronic:zones/javascripts.html.twig' %}
        {% block page_level_plugin_javascripts %}
            <script src="{{ asset('bundles/applicationmetronic/global/plugins/jquery-validation/js/jquery.validate.min.js') }}"></script>
            <script src="{{ asset('bundles/applicationmetronic/global/plugins/select2/select2.min.js') }}"></script>
        {% endblock %}

        {% block page_level_javascripts %}
            <script src="{{ asset('bundles/applicationmetronic/global/scripts/metronic.js') }}"></script>
            <script src="{{ asset('bundles/applicationmetronic/admin/layout/scripts/layout.js') }}"></script>
            <script src="{{ asset('bundles/applicationmetronic/admin/layout/scripts/quick-sidebar.js') }}"></script>
            <script src="{{ asset('bundles/applicationmetronic/admin/pages/scripts/login.js') }}"></script>
        {% endblock %}
    {% endembed %}


    {% block init_javascripts %}
        <script>
            jQuery(document).ready(function() {
                Metronic.init(); // init metronic core components
                Layout.init(); // init current layout
                QuickSidebar.init() // init quick sidebar
                Login.init();
            });
        </script>
    {% endblock %}
{% endblock %}